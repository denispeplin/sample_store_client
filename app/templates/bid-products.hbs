<table class="table table-striped table-bordered table-compact">
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    {{#each product in bidProducts itemController='bid-product'}}
    {{#with product}}
    <tr>
      <td>{{product.name}}</td>
      <td>
        {{#editable-number number=product.amount}}
          {{input type="number" min="0" value=product.amount}}
        {{/editable-number}}
      </td>
      <td>{{product.price}}</td>
    </tr>
    {{/with}}
    {{/each}}
  </tbody>
</table>
