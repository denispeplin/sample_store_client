  <div class="panel-heading">
    {{format-date created_at}}
  </div>
  {{partial 'invoice-products'}}
  <div class="panel-footer">
    <button {{action "receive"}} {{bind-attr class=":btn received:btn-disabled:btn-warning"}} {{bind-attr disabled=received}}>Receive</button>
