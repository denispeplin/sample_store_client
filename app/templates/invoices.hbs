Invoices:

{{#each}}
<div {{bind-attr class=":panel received:panel-success:panel-info"}}>
  <div class="panel-heading">
    {{format-date created_at}}
  </div>
  {{partial 'invoice-products'}}
  <div class="panel-footer">
    {{#unless received}}
      <button {{action "receive"}} class="btn btn-warning">Receive</button>
    {{/unless}}
  </div>
</div>
{{/each}}

